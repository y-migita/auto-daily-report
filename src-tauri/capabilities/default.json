{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "opener:default",
    "macos-permissions:default",
    "screenshots:default",
    {
      "identifier": "shell:allow-open",
      "allow": [
        { "path": "^x-apple\\.systempreferences:.*$" },
        { "path": "^https?://.*$" }
      ]
    }
  ]
}
