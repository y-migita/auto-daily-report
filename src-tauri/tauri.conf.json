{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "ぱしゃログ",
  "version": "0.1.0",
  "identifier": "com.y-migita.pasha-log",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "ぱしゃログ",
        "width": 800,
        "height": 600,
        "backgroundColor": [248, 250, 252, 255]
      }
    ],
    "security": {
      "freezePrototype": true,
      "csp": {
        "default-src": "'self'",
        "connect-src": "'self' https://ai-gateway.vercel.sh ipc: http://ipc.localhost",
        "img-src": "'self' asset: http://asset.localhost blob: data:",
        "style-src": "'unsafe-inline' 'self' https://fonts.googleapis.com",
        "font-src": "'self' https://fonts.gstatic.com"
      },
      "assetProtocol": {
        "enable": true,
        "scope": ["$APPDATA/**", "$HOME/Library/Application Support/**", "$PICTURE/**"]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
