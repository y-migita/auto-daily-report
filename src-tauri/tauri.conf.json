{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "auto-daily-report",
  "version": "0.1.0",
  "identifier": "com.y-migita.auto-daily-report",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "auto-daily-report",
        "width": 800,
        "height": 600,
        "backgroundColor": [248, 250, 252, 255]
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": ["$APPDATA/**", "$HOME/Library/Application Support/**", "$PICTURE/**"]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
